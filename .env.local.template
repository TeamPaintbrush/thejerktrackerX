# Environment Variables Template - Copy to .env.local
# IMPORTANT: Never commit .env.local to git!

# NextAuth Configuration
NEXTAUTH_SECRET=generate-this-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3100

# AWS DynamoDB Configuration (for web version)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_DYNAMODB_TABLE_NAME=jerktracker-orders
NEXT_PUBLIC_DYNAMODB_USERS_TABLE=jerktracker-users
NEXT_PUBLIC_ENABLE_DYNAMODB=true

# ðŸš€ MOBILE APP - Lambda API Configuration
# After deploying Lambda functions, paste your API Gateway URL here:
# Example: https://abc123xyz.execute-api.us-east-1.amazonaws.com/prod
NEXT_PUBLIC_MOBILE_API_BASE_URL=

# Optional: API Key for extra security (set in API Gateway)
NEXT_PUBLIC_MOBILE_API_KEY=

# Optional: Location Admin Key
NEXT_PUBLIC_MOBILE_LOCATION_ADMIN_KEY=
